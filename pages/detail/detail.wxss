/* pages/detail/detail.wxss */
.detailContainer {
  display: flex;
  flex-direction: column;
}
.head_img {
  width: 100%;
  height: 460rpx;
}
.avatar_date image {
  width: 64rpx;
  height: 64rpx;
  margin: 20rpx;
  vertical-align: middle;
}
.avatar_date text {
  font-size: 32rpx;
  vertical-align: middle;
  margin-left: 6px;
}
.title {
  font-size: 32rpx;
  font-weight: 700;
  margin: 10rpx 0 10rpx 30rpx;
}
.share_collection_container {
  position: relative;
}
.share_collection {
  float: right;
}
.share_collection image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 30rpx;
}
.line {
  position: absolute;
  width: 90%;
  left: 5%;
  background: #eee;
  height: 1px;
  z-index: -1;
  top: 55rpx;
}
button {
  width: 300rpx;
  height: 80rpx;
  font-size: 34rpx;
  font-weight: 700;
}
.content {
  font-size: 32rpx;
  line-height: 56rpx;
  text-indent: 28rpx;
  color: #666;
  margin-top: 20rpx;
}
.music_img {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 50%;
  top: 170rpx;
  margin-left: -30rpx;
}